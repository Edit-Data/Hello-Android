<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context="com.example.android.helloandroid.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/press_start_2p"
        android:paddingTop="10dp"
        tools:fontFamily="@font/press_start_2p"
        android:layout_centerHorizontal="true"
        android:textColor="#F5F5F5"
        android:text="Your Journey Begins With"
        android:layout_weight="0"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/udacity"
        android:scaleType="centerCrop"
        android:paddingTop="30dp"
        android:layout_weight="0.5"
        />
    <TextView
        android:id="@+id/udacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/address"
        android:layout_weight="0"
        android:fontFamily="@font/press_start_2p"
        android:paddingBottom="30dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:text="UDACITY"
        android:textColor="#F5F5F5"
        />
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_above="@id/phone"
        android:fontFamily="@font/press_start_2p"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        android:textColor="#F5F5F5"
        android:text="2465 Latham St\nMountain View, CA 94043"
        android:autoLink="map"
        />
    <TextView
        android:id="@+id/phone"
        android:layout_weight="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/press_start_2p"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:layout_above="@id/web"
        android:textColor="#F5F5F5"
        android:text="650-555-5555"
        android:autoLink="phone"
        />
    <TextView
        android:id="@+id/web"
        android:layout_weight="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/press_start_2p"
        android:paddingBottom="20dp"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:textColor="#F5F5F5"
        android:text="www.udacity.com"
        android:autoLink="web"
        />
</LinearLayout>
